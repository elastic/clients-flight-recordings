{
  "api": "transform.put_transform",
  "file": "/test/platinum/transform/transforms_crud.yml",
  "name": "Test transform with query and array of indices in source",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "dest": {
          "index": "airline-data-by-airline"
        },
        "pivot": {
          "aggs": {
            "avg_response": {
              "avg": {
                "field": "responsetime"
              }
            }
          },
          "group_by": {
            "airline": {
              "terms": {
                "field": "airline"
              }
            }
          }
        },
        "source": {
          "index": [
            "airline-data",
            "airline-data-other"
          ],
          "query": {
            "bool": {
              "filter": {
                "term": {
                  "airline": "FOO"
                }
              }
            }
          }
        }
      },
      "transform_id": "airline-transform"
    }
  },
  "response": {
    "headers": {
      "content-length": "255",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "error": {
        "reason": "Transform with id [airline-transform] already exists",
        "root_cause": [
          {
            "reason": "Transform with id [airline-transform] already exists",
            "type": "resource_already_exists_exception"
          }
        ],
        "type": "resource_already_exists_exception"
      },
      "status": 400
    },
    "statusCode": 400
  }
}