{
  "api": "searchable_snapshots.mount",
  "file": "/test/platinum/searchable_snapshots/10_usage.yml",
  "name": "Tests searchable snapshots usage stats",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "index": "docs"
      },
      "repository": "repository-fs",
      "snapshot": "snapshot",
      "storage": "full_copy",
      "wait_for_completion": true
    }
  },
  "response": {
    "headers": {
      "content-length": "102",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "snapshot": {
        "indices": [
          "docs"
        ],
        "shards": {
          "failed": 0,
          "successful": 1,
          "total": 1
        },
        "snapshot": "snapshot"
      }
    },
    "statusCode": 200
  }
}