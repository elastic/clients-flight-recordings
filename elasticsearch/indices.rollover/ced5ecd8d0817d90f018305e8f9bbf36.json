{
  "api": "indices.rollover",
  "file": "/test/free/data_stream/210_rollover_failure_store.yml",
  "name": "Roll over a data stream's failure store with conditions",
  "origin": "yaml",
  "request": {
    "args": {
      "alias": "data-stream-for-rollover::failures",
      "body": {
        "conditions": {
          "max_docs": 1
        }
      }
    }
  },
  "response": {
    "headers": {
      "content-length": "254",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "acknowledged": true,
      "conditions": {
        "[max_docs: 1]": true
      },
      "dry_run": false,
      "lazy": false,
      "new_index": ".fs-data-stream-for-rollover-2025.10.24-000003",
      "old_index": ".fs-data-stream-for-rollover-2025.10.24-000002",
      "rolled_over": true,
      "shards_acknowledged": true
    },
    "statusCode": 200
  }
}