{
  "api": "indices.create",
  "file": "/test/free/get/100_synthetic_source.yml",
  "name": "fetch without refresh also produces synthetic source",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "mappings": {
          "properties": {
            "obj": {
              "properties": {
                "kwd": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "settings": {
          "index": {
            "mapping": {
              "source": {
                "mode": "synthetic"
              }
            },
            "refresh_interval": -1
          }
        }
      },
      "index": "test"
    }
  },
  "response": {
    "headers": {
      "content-encoding": "gzip",
      "content-length": "71",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "acknowledged": true,
      "index": "test",
      "shards_acknowledged": true
    },
    "statusCode": 200
  }
}