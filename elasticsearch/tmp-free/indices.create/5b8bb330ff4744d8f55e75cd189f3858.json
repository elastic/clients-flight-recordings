    "args": {
      "body": {
        "aliases": {
          "test_alias_filter_1": {
            "filter": {
              "term": {
                "field": "value1"
              }
            }
          },
          "test_alias_filter_2": {
            "filter": {
              "term": {
                "field": "value2"
              }
            }
          },
          "test_alias_no_filter": {
          }
