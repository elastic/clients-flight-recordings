{
  "api": "transform.preview_transform",
  "file": "/test/platinum/transform/preview_transforms.yml",
  "name": "Test preview transform pivot with search runtime fields",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "pivot": {
          "aggs": {
            "avg_response": {
              "avg": {
                "field": "responsetime_x_2"
              }
            },
            "time.max": {
              "max": {
                "field": "time-5m"
              }
            },
            "time.min": {
              "min": {
                "field": "time-5m"
              }
            }
          },
          "group_by": {
            "airline": {
              "terms": {
                "field": "airline-upper"
              }
            },
            "by-hour": {
              "date_histogram": {
                "field": "time",
                "fixed_interval": "1h"
              }
            }
          }
        },
        "source": {
          "index": "airline-data",
          "runtime_mappings": {
            "airline-upper": {
              "script": "emit(doc['airline'].value.toUpperCase())",
              "type": "keyword"
            },
            "responsetime_x_2": {
              "script": "emit(doc['responsetime'].value * 2.0)",
              "type": "double"
            },
            "time-5m": {
              "script": "emit(doc['time'].value.toInstant().minus(5, ChronoUnit.MINUTES).toEpochMilli())",
              "type": "date"
            }
          }
        }
      }
    }
  },
  "response": {
    "headers": {
      "content-length": "923",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
