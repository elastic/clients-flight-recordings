{
  "api": "search",
  "file": "/test/platinum/inference/70_text_similarity_rank_retriever.yml",
  "name": "Text similarity reranking with allowed failure maintains custom sorting",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "fields": [
          "text",
          "topic"
        ],
        "retriever": {
          "text_similarity_reranker": {
            "allow_rerank_failures": true,
            "field": "text",
            "inference_id": "failing-rerank-model",
            "inference_text": "science",
            "rank_window_size": 10,
            "retriever": {
              "standard": {
                "query": {
                  "term": {
                    "topic": "science"
                  }
                },
                "sort": [
                  "subtopic"
                ]
              }
            }
          }
        },
        "size": 10,
        "track_total_hits": true
      },
      "index": "test-index",
      "typed_keys": true
    }
  },
  "response": {
    "headers": {
      "content-type": "application/json",
      "transfer-encoding": "chunked",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "_shards": {
        "failed": 0,
        "skipped": 0,
        "successful": 1,
        "total": 1
      },
      "hits": {
        "hits": [
        ],
        "max_score": null,
        "total": {
          "relation": "eq",
          "value": 0
        }
      },
      "timed_out": false,
      "took": 1
    },
    "statusCode": 200
  }
}