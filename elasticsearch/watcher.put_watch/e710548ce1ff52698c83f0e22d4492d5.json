{
  "api": "watcher.put_watch",
  "file": "/test/platinum/painless/50_update_scripts.yml",
  "name": "Test condition scripts are updated on execution",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "actions": {
          "my_log": {
            "logging": {
              "text": "{{ctx}}"
            }
          }
        },
        "condition": {
          "script": {
            "id": "condition-script"
          }
        },
        "input": {
          "simple": {
          }
        },
        "trigger": {
          "schedule": {
            "interval": "1h"
          }
        }
      },
      "id": "my_watch"
    }
  },
  "response": {
    "headers": {
      "content-length": "78",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "_id": "my_watch",
      "_primary_term": 1,
      "_seq_no": 20,
      "_version": 2,
      "created": false
    },
    "statusCode": 200
  }
}