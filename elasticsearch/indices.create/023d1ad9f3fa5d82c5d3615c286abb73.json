{
  "api": "indices.create",
  "file": "/test/free/index/100_field_name_length_limit.yml",
  "name": "Test field name length limit",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "mappings": {
          "dynamic": true
        },
        "settings": {
          "index": {
            "auto_expand_replicas": "0-1",
            "mapping": {
              "field_name_length": {
                "ignore_dynamic_beyond_limit": true,
                "limit": 45
              }
            }
          }
        }
      },
      "index": "test_index"
    }
  },
  "response": {
    "headers": {
      "content-length": "69",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "acknowledged": true,
      "index": "test_index",
      "shards_acknowledged": true
    },
    "statusCode": 200
  }
}