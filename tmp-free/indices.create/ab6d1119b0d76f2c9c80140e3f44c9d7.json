{
  "api": "indices.create",
  "file": "/test/free/indices.sort/10_basic.yml",
  "name": "Index Sort",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "mappings": {
          "properties": {
            "rank": {
              "type": "integer"
            }
          }
        },
        "settings": {
          "index": {
            "sort": {
              "field": "rank"
            }
          },
          "number_of_shards": 1,
          "refresh_interval": -1,
          "routing": {
            "rebalance": {
              "enable": "none"
            }
          }
        }
      },
      "index": "test"
    }
  },
  "response": {
    "headers": {
      "content-encoding": "gzip",
      "content-length": "71",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "acknowledged": true,
      "index": "test",
      "shards_acknowledged": true
    },
    "statusCode": 200
  }
}