{
  "api": "indices.create",
  "file": "/test/free/search.query/20_ngram_search.yml",
  "name": "ngram search",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "mappings": {
          "properties": {
            "text": {
              "analyzer": "my_analyzer",
              "type": "text"
            }
          }
        },
        "settings": {
          "analysis": {
            "analyzer": {
              "my_analyzer": {
                "filter": [
                  "my_ngram"
                ],
                "tokenizer": "standard"
              }
            },
            "filter": {
              "my_ngram": {
                "max": 2,
                "min": "2,",
                "type": "ngram"
              }
            }
          },
          "number_of_replicas": 0,
          "number_of_shards": 1
        }
      },
      "index": "test"
    }
  },
  "response": {
    "headers": {
      "content-encoding": "gzip",
      "content-length": "71",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "acknowledged": true,
      "index": "test",
      "shards_acknowledged": true
    },
    "statusCode": 200
  }
}