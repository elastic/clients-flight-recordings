{
  "api": "indices.create",
  "file": "/test/free/logsdb/20_source_mapping.yml",
  "name": "include/exclude is supported with stored _source",
  "origin": "yaml",
  "request": {
    "args": {
      "body": {
        "mappings": {
          "_source": {
            "excludes": [
              "b"
            ]
          }
        },
        "settings": {
          "index": {
            "mapping": {
              "source": {
                "mode": "stored"
              }
            },
            "mode": "logsdb"
          }
        }
      },
      "index": "test-excludes"
    }
  },
  "response": {
    "headers": {
      "content-encoding": "gzip",
      "content-length": "80",
      "content-type": "application/json",
      "x-elastic-product": "Elasticsearch"
    },
    "payload": {
      "acknowledged": true,
      "index": "test-excludes",
      "shards_acknowledged": true
    },
    "statusCode": 200
  }
}